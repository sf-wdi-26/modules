<!DOCTYPE html>
<html>
  <head>
    <title>Realtime Chat</title>
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <script type="text/javascript" src="//code.jquery.com/jquery-1.11.0.min.js"></script>
    <script type="text/javascript" src="/socket.io/socket.io.js"></script>
    <script type="text/javascript" src="/js/index.js"></script>
  </head>
  <body>
  <div class="container-fluid">
    <div class="row">
      <div class="col-md-8 col-md-offset-2">
        <h1>Realtime Chat</h1>
        <form id="messageForm">
          <div class="form-group">
            <label for="name">Name</label>
            <input id="name" class="form-control" value="Anonymous"/>
          </div>
          <div class="form-group">
            <label for="name">Message</label>
            <textarea class="form-control" placeholder="your message" maxlength="200" id="outgoingMessage"></textarea>
          </div>
          <input type="submit" value="send" class="btn btn-default" id="send"/>
        </form>
        <hr />
        <div id="messages"></div>
      </div>
    </div>
  </body>
</html>
